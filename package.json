{
  "name": "node-fix-path",
  "version": "0.0.0-development",
  "description": "Fix the $PATH on macOS and Linux when run from a GUI app",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    }
  },
  "scripts": {
    "prepublishOnly": "yarn build",
    "build": "rm -fr dist/* && node scripts/build.mjs && tsc",
    "lint": "eslint . && prettier -c src",
    "lint:fix": "eslint . --fix && prettier -c src -w",
    "test": "vitest"
  },
  "repository": "github:jonluca/node-fix-path",
  "author": "JonLuca DeCaro",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "devDependencies": {
    "shell-path": "^3.0.0",
    "@types/node": "^18.6.3",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^5.32.0",
    "@typescript-eslint/parser": "^5.32.0",
    "esbuild": "^0.14.53",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-unused-imports": "^2.0.0",
    "rimraf": "^3.0.2",
    "typescript": "^4.7.4",
    "vitest": "^0.20.3"
  },
  "prettier": {
    "singleQuote": false,
    "useTabs": false
  }
}
